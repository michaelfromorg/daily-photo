# Notion OAuth Configuration (Backend)
# These are required for the Vercel serverless function in api/notion-callback.ts

# Get these from: https://www.notion.so/my-integrations
# 1. Create a new "Public" integration
# 2. Copy the OAuth client ID and secret

NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=

# This should match your deployed Vercel URL
# Format: https://your-app-name.vercel.app/api/notion-callback
NOTION_REDIRECT_URI=

# IMPORTANT: Add this exact redirect URI to your Notion integration settings
# under "Redirect URIs" at https://www.notion.so/my-integrations

EXPO_PUBLIC_NOTION_CLIENT_ID=
EXPO_PUBLIC_BACKEND_URL=
